<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/shape_rectangle_gray"
    android:orientation="vertical"
    android:padding="20dp">

    <com.havan.customviews.MyTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="16dp"
        android:text="This is the custom content of the dialgo"
        android:padding="5dp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <com.havan.customviews.MyTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Title"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:myFont="Roboto_Bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <com.havan.customviews.MyTextView
            android:id="@+id/btn_cancel_dialog"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shape_rectangle_orange"
            android:gravity="center"
            android:text="@string/op_cancel"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.havan.customviews.MyTextView
            android:id="@+id/btn_ok_dialog"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_rectangle_blue"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>